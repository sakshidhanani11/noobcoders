# .env
# Database URL (SQLite for local dev, PostgreSQL for production)
DATABASE_URL="sqlite:///./coastal_threat.db"

TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=+1234567890
SMS_RECIPIENT=+19876543210


# Twilio Credentials (Optional, for SMS alerts)
# TWILIO_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# TWILIO_TOKEN="your_twilio_auth_token"
# TWILIO_FROM="+15017122661" # Your Twilio phone number
# SMS_RECIPIENT="+1234567890,+1987654321" # Comma-separated list of recipient numbers

# WebSocket Server URL (for real-time updates to a dashboard)
# This assumes you have a separate WebSocket server running.
# For local testing, you might point it to a local WebSocket server.
# For Docker, 'websocket' would be the service name.
HTTP_BROADCAST_URL="http://localhost:8002/broadcast"

# Flask Secret Key
SECRET_KEY="your_super_secret_key_here" # CHANGE THIS FOR PRODUCTION!
